{
    "app-id": "org.sindresorhus.Caprine",
    "branch": "stable",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "caprine",
    "separate-locales": false,
    "tags": ["messenger", "electron", "open-source"],
